<!--                android:textColor="@color/global_text_secondary"-->
<!--                android:maxLines="1"-->
<!--                android:ellipsize="end"-->
<!--                android:clickable="true"-->
<!--                android:focusable="true" />-->

            <TextView
                android:id="@+id/fragment_poi_detail_info_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_detail_site"
                android:text="gatcchina.ru"
                android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
                android:textAppearance="@style/TextAppearance.CityGuide.Body1"
                android:textColor="@color/global_text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"/>

            <TextView
                android:id="@+id/fragment_poi_detail_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_detail_phone"
                android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:text="88137130625"
                android:textAppearance="@style/TextAppearance.CityGuide.Body1"
                android:textColor="@color/global_text_secondary"
                android:autoLink="phone"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>